# Database Configuration
SUPABASE_URL=tu-supabase-url
SUPABASE_KEY=tu-supabase-key
DATABASE_URL=postgresql://user:password@localhost/dbname

# AI API Keys
OPENAI_API_KEY=tu-api-key-aqui
GEMINI_API_KEY=your_gemini_api_key_here

# Text Chunking Configuration
CHUNK_SIZE=800                # Size of text chunks (default: 800, previously was 2000)
CHUNK_OVERLAP=100            # Overlap between chunks (~12% overlap)

# Document Processing Limits
MAX_FILE_SIZE_MB=50          # Maximum file size in MB
MAX_PAGES=1000               # Maximum pages per document

# LLM Configuration
DEFAULT_MODEL=gpt-4o         # Default model for chat and extraction
TEMPERATURE=0.0              # Temperature for LLM responses

# Retrieval Configuration
SIMILARITY_TOP_K=6           # Number of chunks to retrieve for context

# API Configuration
API_TIMEOUT=120              # Request timeout in seconds